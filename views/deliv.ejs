<%- include("partials/header1.ejs"); -%>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delivery Details</title>

    <style>
        body {
            background-color: #bdb76b;
        }

        .delivery-form {
            max-width: 400px;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: 600;
        }

        .btn-submit {
            background-color: #000000;
            color: #ffffff;
        }
    </style>
</head>

<body>
    <div class="container">
        <center><img style="width: 200px; height:200px" src="https://cdn4.iconfinder.com/data/icons/logistic-delivery-solid-icons-vol-3/72/101-1024.png" alt="" class="main1logo"></center>

        <div class="delivery-form">
            <h2 class="text-center mb-4"><strong>Delivery Details</strong></h2>
            <form action="/payment" method="post" novalidate oninput="submitButton.disabled = !(address.value.trim() && phone.value.trim())">
                <div class="mb-3">
                    <label for="address" class="form-label"><strong>Address</strong></label>
                    <input type="text" class="form-control" placeholder="Enter your address" name="address" id="address" required />
                </div>

                <div class="mb-3">
                    <label for="phoneNumber" class="form-label"><strong>Mobile Number</strong></label>
                    <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter your Mobile number" name="phone" id="phone" required onchange="validateForm()"/>
                </div>
                <a href="/payment">
                    <button type="submit" class="btn btn-primary ml-2 btn-submit" style="margin-bottom: 5px;" id="submitButton" disabled>Confirm</button>
                </a>
                
            </form>
        </div>
    </div>
    <script>
        function validateForm() {
            var phoneNumberInput = document.getElementById('phoneNumber');
            var submitButton = document.getElementById('submitButton');
    
            if (phoneNumberInput.value.trim().length !== 10) {
                submitButton.disabled = true;
                alert('Mobile number should be exactly 10 digits.');
            } else {
                submitButton.disabled = false;
            }
        }
    </script>
</body>

</html>
